<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.header {
			font-family: 'Exo', sans-serif;
		}
		
		.titlePanel {
			background-color: #fff6de;
			border: 3px solid #e8a400;
			-webkit-border-radius: 15px;
			-moz-border-radius: 15px;
			border-radius: 15px;
			margin: auto;
			width: 600px;
		}
		
		.titlePanel h1 {
			color: #e8a400;
			text-align: center;
		}
		
		.menu {
			margin-top: 10px;
			text-align: center;
			color: #2636D7;
		}
		
		.menuLink {
			font-weight: bold;
			text-decoration: none;
			color: #2636D7;
			font-size: 20px;
		}
		
		.menuSeparator {
			margin: 0 10px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.header}">
		<div class="{style.titlePanel}">
			<h1>Welcome on GWTP demo page!</h1>
		</div>
		<div class="{style.menu}">
			<a href="#about" class="{style.menuLink}">About</a>
			<span class="{style.menuSeparator}">•</span>
			<a href="#browser" class="{style.menuLink}">Browser</a>
			<span class="{style.menuSeparator}">•</span>
			<a href="#hangman" class="{style.menuLink}">Hangman</a>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>