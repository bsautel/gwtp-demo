<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.body {
			background-color: #fff;
		}
		
		.header {
			
		}
		
		.content {
			margin-top: 20px;
			color: #000;
			font-family: 'Ruda', sans-serif;
		}
		
		.footer {
			
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.body}">
		<g:SimplePanel ui:field="headerPanel" styleName="{style.header}" />
		<g:SimplePanel ui:field="mainPanel" styleName="{style.content}" />
		<g:SimplePanel ui:field="footerPanel" styleName="{style.footer}" />
	</g:HTMLPanel>
</ui:UiBinder>